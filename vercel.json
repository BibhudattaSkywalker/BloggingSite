{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/build"
      }
    },
    {
      "src": "blogpost/package.json",
      "use": "@vercel/node"
    }
  ],
  
  "routes": [
    { "src": "/api/(.*)", "dest": "/blogpost/api/$1" }
  ]
}
